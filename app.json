{
  "expo": {
    "name": "Riff Maker",
    "slug": "riffmaker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "riffmaker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#991c1c"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oluanmedrado.riffmaker",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "O Riff Maker precisa acessar o microfone para gravar seus riffs de guitarra."
      }
    },
    "android": {
      "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#991c1c"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.oluanmedrado.riffmaker",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
